@inject NavigationManager NavManager

<div class="jumbotron">
    <h1 class="display-4 text-center">Welcome to Blazing Trails</h1>
    <p class="lead text-center">Find the most beautiful hiking trails using our blazing fast search!</p>
    <p class="mt-4">
        <input @onkeydown="SearchTrail"
               @bind="SearchTerm"
               @bind:event="oninput"
               type="text"
               placeholder="Search for a trail..."
               class="form-control form-control-lg" />
    </p>
</div>


@code {
    private string SearchTerm { get; set; } = string.Empty;

    private void SearchTrail(KeyboardEventArgs e)
    {
        if (e.Key != "Enter") return;
        NavManager.NavigateTo($"/search/{SearchTerm}");
    }
}